<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.AudioRecord">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource Back}">

            <Frame Style="{StaticResource Frame}">
                <Label Style="{StaticResource Lab}" 
                       Text="Funkcje nagrywania dźwięku" />
            </Frame>

            <Button Style="{StaticResource Buttons}" 
                    Text="Rozpocznij / Zatrzymaj nagrywanie" 
                    Clicked="Button_Clicked" />
            
            <Button Style="{StaticResource Buttons}" 
                    Text="Odtwórz nagranie" 
                    Clicked="Button1_Clicked" />

            <Label Style="{StaticResource Labels}" 
                   x:Name="LabelInfo" 
                   TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>